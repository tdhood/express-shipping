{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/shipments.schema.json",
    "title": "Shipments",
    "description": "Shipment for company",
    "type": "object",
    "properties": {
        "productId": {
            "type": "integer",
            "minimum": 1000
        },
        "name": {
            "type": "string"
        },
        "addr": {
            "type": "string",
            "pattern": "^[#.0-9a-zA-Z\s,-]+$"
        },
        "zipcode": {
            "type": "string",
            "pattern": "(^\d{5}$)|(^\d{9}$)|(^\d{5}-\d{4}$)"
        }
    },
    "additionalProperties": false,
    "required": [
        "productId",
        "name",
        "addr",
        "zipcode"
    ]
}